<UserControl x:Class="WordleClone.Views.Controls.LetterItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordleClone.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" 
             d:DesignWidth="100">
    
    <Border CornerRadius="10"
            Background="#333"
            Margin="10"
            Width="100"
            Height="100">
        <Grid>
            <Label Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LetterItem}}, Path=Letter}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontSize="72"
                   Padding="0"
                   Margin="0 -10 0 0"/>
        </Grid>
    </Border>
    
</UserControl>
